<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/banking_operation_item_size">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/general_layout_margin"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/itemIcon"
            android:layout_width="@dimen/banking_operation_icon_size"
            android:layout_height="@dimen/banking_operation_icon_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/general_layout_margin"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="true"
            style="@android:style/TextAppearance.Holo.Small"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:ellipsize="end"/>

    </LinearLayout>

</FrameLayout>