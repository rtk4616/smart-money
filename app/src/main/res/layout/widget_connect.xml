<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/connect_way_avator"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/i_connect_avator2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/connect_status_view"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/bg_connect_status"
        app:layout_constraintTop_toTopOf="@+id/connect_way_avator"
        android:layout_marginTop="12dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/connect_way_avator"/>

    <TextView
        android:id="@+id/connect_way_title_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/connect_way_message_title"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.ListItem.Medium"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/connect_way_avator"
        app:layout_constraintRight_toLeftOf="@+id/connect_action_btn"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/connect_action_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/i_connect_call"
        android:foreground="?android:selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"/>

    <ImageView
        android:id="@+id/connect_way_detail_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:srcCompat="@drawable/i_clock"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/connect_way_title_view"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/connect_way_title_view"/>

    <TextView
        android:id="@+id/connect_way_detail_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/connect_way_message_detail"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/view3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/connect_way_detail_icon"
        app:layout_constraintRight_toLeftOf="@+id/connect_action_btn"
        app:layout_constraintTop_toBottomOf="@+id/connect_way_title_view"
        app:layout_constraintVertical_bias="0.0"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/line_divider_color"
        app:layout_constraintLeft_toRightOf="@+id/connect_way_avator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/view3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/connect_way_avator"/>

</android.support.constraint.ConstraintLayout>
