<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item> <!-- the app bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!-- the status bar and contextual app bars -->
        <item name="colorAccent">@color/colorAccent</item> <!-- theme UI controls like checkboxes and text fields -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextAppearance.ListItem.SuperLarge" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textSize">48sp</item>
    </style>
    <style name="TextAppearance.ListItem.Large" parent="@android:style/TextAppearance.Holo.Large"/> <!-- 22sp -->
    <style name="TextAppearance.ListItem.Medium" parent="@android:style/TextAppearance.Holo.Medium"/> <!-- 18sp -->
    <style name="TextAppearance.ListItem.Small" parent="@android:style/TextAppearance.Holo.Small"/> <!-- 14sp -->

    <style name="TextAppearance.DrawerMenu.Large" parent="@android:style/TextAppearance.Holo.Large.Inverse"/>
    <style name="TextAppearance.DrawerMenu.Medium" parent="@android:style/TextAppearance.Holo.Medium.Inverse"/>
    <style name="TextAppearance.DrawerMenu.Small" parent="@android:style/TextAppearance.Holo.Small.Inverse"/>

    <style name="commonListItemStyle">
    </style>

    <style name="Theme.Transparent" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transaction_connect_activity_bkg</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MaterialAnimations" parent="@style/Theme.AppCompat.Light.NoActionBar">
    </style>

</resources>
